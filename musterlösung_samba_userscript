Shellscript zum Erstellen der User/Shares und Setzen der Permissions:
#!/bin/bash
PASSWORD=" sm112345"
groupadd tuxies
groupadd tuxladies
groupadd tuxmens
groupadd violenttux
useradd -m -p $PASSWORD -g tuxies -G tuxladies, violenttux laratux
useradd -m -p $PASSWORD -g tuxies -G tuxladies cutetux
useradd
-m
-p $PASSWORD
-g tuxies
-G tuxmens, violenttux mrtux
useradd
=n
-p $PASSWORD
-g tuxies
-G tuxmens, violenttux rambotux
useradd
useradd
-p $PASSWORD -g tuxies -G tuxmens, violenttux luketux
-m
SPASSWORD
-g tuxies
-G tuxmens slashtux
useradd
-m -p $PASSWORD -g tuxies -G tuxladies divatux
echo
-ne
"$PASSWORD \ n$PASSWORD\n"
smbpasswd-a
-S laratux
echo
-ne
"$PASSWORD\n$PASSWORD \n"
smbpasswd
-a
-S cutetux
echo
-ne
"§PASSWORD\n$PASSWORD\n"
smbpasswd-a
-S mrtux
echo
-ne
"PASSWORD\n$PASSWORD\n"
smbpasswd
-a
-s rambotux
echo
-ne
"$PASSWORD\n$PASSWORD\n"
smopasswd
-a
-S luketux
echo
-ne
"§PASSWORD\n$PASSWORD\n"
smbpasswd
-a
-s slashtux
echo
-ne
"PASSWORD\ n$PASSWORD \n"
smbpasswd -a -s divatux
mkdir/var/smbshr
cd /var/smbshr
mkdir tuxplanet ladiesplace mensplace scratch music
chgrp tuxies tuxplanet
chgrp tuxladies ladiesplace
chgrp tuxmens mensplace
chgrp violenttux scratch
chgrp tuxies music
chmod 2770 tuxplanet ladiesplace mensplace scratch
chmod 2755 music
/etc/samba/smb.conf
[global]
workgroup = SMBWRKG
#netbios name = SMBSRV1
server string = SMBSRV1
log file = /var/log/samba/log.%m
max log size = 1000
encrypt passwords = true
wins support = yes
local master = yes
preferred master = yes
map to guest = bad user
[testshare]
comment = testshare
path = /home/vmadmin/testshare
browseable = yes
